<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  	<modelVersion>4.0.0</modelVersion>
	
 	<groupId>be.occamsoftware.sabine.poel</groupId>
 	<artifactId>inacsi-frontend</artifactId>
  	<version>1.0-LATEST-SNAPSHOT</version>
  	<packaging>pom</packaging>
  	<name>sabine-poel-frontend</name>
  	<description>inacsi-frontend</description>
	<parent>
		<artifactId>colloseum-parent-pom</artifactId>
		<groupId>be.occam.colloseum</groupId>
		<version>1.0-LATEST-SNAPSHOT</version>
	</parent>
	
	<build>
		<resources>
			<resource>
				<directory>src/main/html</directory>
				<includes>
					<include>*</include>
				</includes>
        		<filtering>true</filtering>
      		</resource>
      		<resource>
				<directory>src/main/html/resources</directory>
				<includes>
					<include>**/**</include>
				</includes>
        		<filtering>false</filtering>
        		<targetPath>resources</targetPath>
      		</resource>
      		<resource>
				<directory>src/main/html/libraries</directory>
				<includes>
					<include>**/**</include>
				</includes>
        		<filtering>false</filtering>
        		<targetPath>libraries</targetPath>
      		</resource>
		</resources>
		 <extensions>
      		<extension>
    			<groupId>org.apache.maven.wagon</groupId>
    			<artifactId>wagon-ftp</artifactId>
    			<version>3.0.0</version>
			</extension>
		</extensions>
		<plugins>
			<plugin>
	    		<groupId>org.codehaus.mojo</groupId>
	    		<artifactId>wagon-maven-plugin</artifactId>
	    		<version>1.0</version>
	    		<executions>
	    			<execution>
	    				<id>upload-to-one-dot-com</id>
	    				<phase>install</phase>
	    				<goals>
	    					<goal>upload</goal>
	    				</goals>
	    				<configuration>
	    					<fromDir>${project.build.outputDirectory}</fromDir>
	    					<toDir>sabine-poel</toDir>
	    					<includes>
	    							*.html,resources/**,libraries/**
	    					</includes>
	    					<url>ftp://ftp.occamsoftware.be</url>
	    					<serverId>ftp-occam</serverId>
	    				</configuration>
	    			</execution>
	    		
	    		</executions>
			</plugin>
		</plugins>
	</build>
	
</project>
